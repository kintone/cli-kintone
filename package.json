{
  "name": "@kintone/create-plugin",
  "version": "1.0.3",
  "description": "A CLI tool for creating a kintone plugin!",
  "bin": {
    "create-plugin": "bin/cli.js",
    "create-kintone-plugin": "bin/cli.js"
  },
  "main": "dist/src/index.js",
  "engines": {
    "node": ">=6"
  },
  "repository": "kintone/create-plugin",
  "homepage": "https://github.com/kintone/create-plugin",
  "bugs": "https://github.com/kintone/create-plugin/issues",
  "dependencies": {
    "chalk": "^2.4.1",
    "glob": "^7.1.2",
    "inquirer": "^5.2.0",
    "lodash": "^4.17.10",
    "meow": "^5.0.0",
    "node-rsa": "^1.0.0",
    "os-locale": "^2.1.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@kintone/plugin-packer": "^1.0.0",
    "@types/glob": "^5.0.35",
    "@types/inquirer": "^0.0.41",
    "@types/lodash": "^4.14.109",
    "@types/mocha": "^5.2.0",
    "@types/node": "^9.6.18",
    "@types/node-rsa": "^0.4.3",
    "@types/rimraf": "^2.0.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.2",
    "standard-version": "^4.4.0",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  },
  "files": [
    "bin",
    "dist/src",
    "templates"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "lint": "tslint -c tslint.json src/**/*.ts test/**/*.ts",
    "release": "run-s build lint test:all standard-version",
    "standard-version": "standard-version",
    "unittest": "mocha --require ts-node/register --watch-extensions ts test/**/*-test.ts",
    "test": "npm-run-all -s build -p lint unittest",
    "test:all": "run-p test e2e",
    "e2e": "mocha --require ts-node/register --watch-extensions ts test/e2e.ts"
  },
  "keywords": [
    "kintone"
  ],
  "author": "kintone",
  "license": "MIT"
}
