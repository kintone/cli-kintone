{
  extends: [
    'github>cybozu/renovate-config',
    ':prConcurrentLimitNone',
  ],
  npm: {
    packageRules: [
      {
        semanticCommitType: 'chore',
        matchPackageNames: [
          '*',
        ],
      },
      {
        matchDepTypes: [
          'devDependencies',
        ],
        matchUpdateTypes: [
          'minor',
        ],
        automerge: true,
        matchPackageNames: [
          '*',
        ],
      },
    ],
  },
  packageRules: [
    {
      matchDepTypes: [
        'action',
      ],
      pinDigests: true,
      matchPackageNames: [
        '!actions/{/,}**',
        '!cybozu/{/,}**',
      ],
    },
  ],
}
