{
  "extends": [
    "github>cybozu/renovate-config",
    ":prConcurrentLimitNone"
  ],
  "npm": {
    "packageRules": [
      {
        // automerge minor/patch updates of devDependencies
        "matchPackagePatterns": [
          "*"
        ],
        "matchDepTypes": [
          "devDependencies",
        ],
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      }
    ]
  }
}
